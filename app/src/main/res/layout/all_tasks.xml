<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:hint="Title"
            android:textSize="24sp"
            android:layout_margin="1dp"
            android:background="@drawable/rectangular_border_background"/>
        <TextView
            android:id="@+id/text_view_task_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_below="@+id/text_view_task_title"
            android:hint="Description"
            android:textSize="24sp"
            android:layout_margin="1dp"
            android:background="@drawable/rectangular_border_background"/>

        <ImageView
            android:id="@+id/image_view_uploaded_task"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:background="@drawable/rectangular_border_background"/>

    </LinearLayout>

</android.support.v7.widget.CardView>