<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/text_view_daily_diary"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Daily Diary"
        android:textColor="@color/colorPrimary"
        android:textSize="39sp" />

    <TextView
        android:id="@+id/text_view_current_date"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_below="@+id/text_view_daily_diary"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:hint="shows current date"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/text_view_current_date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-45dp"
        android:src="@drawable/planner" />

    <Button
        android:id="@+id/button_show_all_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/my_button"
        android:text="Show all Dates" />

</RelativeLayout>